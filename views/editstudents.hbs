{{#unless error}}
<div class="bg-light p-5 rounded mt-3">
    <h1>Editar</h1>
    <form action="/updatestudents" method="post">
        <div class="row mt-5">
            <div class="col-md-5 mb-3">
                <label for="nome" class="form-label">Nome</label>
                <input type="hidden" value="{{id_aluno}}" name="id">
                <input value="{{nome_aluno}}" type="text" class="form-control" id="nome" name="nome"
                    placeholder="Digite seu nome" required>
            </div>

            <div class="col-md-5 mb-3">
                <label for="email" class="form-label">Endereço de e-mail</label>
                <input value="{{email_aluno}}" type="email_aluno" class="form-control" id="email" name="email"
                    placeholder="Digite seu email" required>
            </div>

            <div class="col-md-3">
                <button class="mt-3 p-3 w-100 btn btn-warning">Salvar Alterações</button>
            </div>
        </div>
    </form>
</div>
{{else}}
<div class="card bg-danger p-4 mt-5 text-white">
    <div class="card-body fw-bold text-center">
        Houve um problema: {{problema}}
    </div>
</div>
{{/unless}}
