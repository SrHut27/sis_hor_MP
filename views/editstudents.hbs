{{#unless error}}
<div class="bg-light p-5 rounded mt-3">
    <h1>Editar</h1>
    <form action="/updatestudents" method="post">
        <div class="row mt-5">
            <div class="col-md-5 mb-3">
                <label for="nome" class="form-label">Nome</label>
                <input type="hidden" value="{{id}}" name="id">
                <input value="{{nome}}" type="text" class="form-control" id="nome" name="nome"
                    placeholder="Digite seu nome" required>
            </div>
            <div class="col-md-5 mb-3">
                <label for="sobrenome" class="form-label">Sobrenome</label>
                <input value="{{sobrenome}}" type="text" class="form-control" id="sobrenome" name="sobrenome"
                    placeholder="Digite seu sobrenome" required>
            </div>
            <div class="col-md-5 mb-3">
                <label for="email" class="form-label">Endereço de e-mail</label>
                <input value="{{email}}" type="email" class="form-control" id="email" name="email"
                    placeholder="Digite seu email" required>
            </div>
            <div class="col-md-5 mb-3">
                <label for="ano" class="form-label">Ano</label>
                <div class="input-group mb-3">
                    <select class="custom-select" id="ano" name="ano">
                        <option value="{{ano}}" disabled>Selecionar o ano do aluno</option>
                        <option value="1º">1º/a</option>
                        <option value="2º">2º</option>
                        <option value="3º">3º</option>
                        <option value="4º">4º</option>
                        <option value="5º">5º</option>
                        <option value="6º">6º</option>
                        <option value="7º">7º</option>
                        <option value="8º">8º</option>
                        <option value="9º">9º</option>
                        <option value="1ºEM">1ºEM</option>
                        <option value="2ºEM">2ºEM</option>
                        <option value="3ºEM">3ºEM</option>
                    </select>
                    <div class="input-group-append">
                        <label class="input-group-text" for="ano">Ano</label>
                    </div>
                </div>
            </div>
            <div class="col-md-5 mb-3">
                <label for="tutor" class="form-label">Tutor do Aluno</label>
                <input value="{{tutor}}" type="text" class="form-control" id="tutor" name="tutor" placeholder="Digite o nome do tutor"
                    required>
            </div>
            <div class="col-md-3">
                <button class="mt-3 p-3 w-100 btn btn-warning">Salvar Alterações</button>
            </div>
        </div>
    </form>
</div>
{{else}}
<div class="card bg-danger p-4 mt-5 text-white">
    <div class="card-body fw-bold text-center">
        Houve um problema: {{problema}}
    </div>
</div>
{{/unless}}
