{{#unless error}}
<div class="bg-light p-5 rounded mt-3">
    <h1>Editar</h1>
    <form action="/update" method="post">
        <div class="row mt-5">
            <div class="col-md-5 mb-3">
                <label for="nome" class="form-label">Nome Completo</label>
                <input type="hidden" value="{{id_usuario}}" name="id">
                <input value="{{nome_usuario}}" type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome" required>
            </div>
            <div class="col-md-5 mb-3">
                <label for="email" class="form-label">Endereço de e-mail</label>
                <input value="{{email_usuario}}" type="email" class="form-control" id="email" name="email" placeholder="Digite seu email" required>
            </div>
            <div class="col-md-5 mb-3">
                <label class="form-label">Função</label>
                <div class="input-group">
                    <select class="custom-select" id="funcao" name="nome_tipo_usuario">
                        <option value="{{nome_tipo_usuario}}" disabled>Selecionar tipo</option>
                        <option value="Administrador">Administrador/a</option>
                        <option value="Coordenador">Coordenador/a</option>
                        <option value="Tutor">Tutor/a</option>
                        <option value="Professor">Professor/a</option>
                    </select>
                    <div class="input-group-append">
                        <label class="input-group-text" for="funcao">Funções</label>
                    </div>
                </div>
            </div>
            <div class="col-md-5 mb-3">
                <button class="mt-3 p-8 w-100 btn btn-warning">Salvar Alterações</button>
            </div>
        </div>
    </form>
</div>
{{else}}
<div class="card bg-danger p-4 mt-5 text-white">
    <div class="card-body fw-bold text-center">
        Houve um problema: {{problema}}
    </div>
</div>
{{/unless}}
